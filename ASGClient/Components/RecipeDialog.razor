@using ASGShared.Models
@inject MudBlazor.IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h4">@Recipe?.Name</MudText>
            <MudText Typo="Typo.subtitle1" Class="mt-2">Cuisine Type: @Recipe?.CuisineType</MudText>
            <MudText Typo="Typo.subtitle1" Class="mt-2">Calories: @Recipe?.Calories</MudText>
            <MudText Typo="Typo.subtitle1" Class="mt-2">Preparation Time: @Recipe?.PrepTime</MudText>
            <MudDivider Class="my-2" />
            <MudText Typo="Typo.h6">Ingredients</MudText>
            <MudList T="string">
                @foreach (var ingredient in Recipe?.Ingredients ?? Array.Empty<string>())
            {
                <MudListItem>@ingredient</MudListItem>
            }
        </MudList>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6">Instructions</MudText>
        <MudList T="string">
            @foreach (var instruction in Recipe?.Instructions ?? Array.Empty<string>())
            {
                <MudListItem>@instruction</MudListItem>
            }
        </MudList>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Recipe? Recipe { get; set; }

    private void CloseDialog()
    {
        MudDialog.Close();
    }
}
